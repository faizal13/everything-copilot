{
  "_comment": "MCP Server Registry - Remove all _comment fields for strict JSON parsers",

  "servers": {
    "github": {
      "name": "GitHub MCP Server",
      "description": "Full GitHub API access: repositories, issues, pull requests, actions, and code search",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_TOKEN}"
      },
      "capabilities": [
        "repo:read",
        "repo:write",
        "issues:read",
        "issues:write",
        "pulls:read",
        "pulls:write",
        "actions:read",
        "actions:trigger",
        "code_search",
        "notifications"
      ]
    },

    "filesystem": {
      "name": "Filesystem MCP Server",
      "description": "Sandboxed file operations: read, write, search, and directory management",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem", "${WORKSPACE_ROOT:-./}"],
      "env": {},
      "capabilities": [
        "file:read",
        "file:write",
        "file:search",
        "directory:list",
        "directory:create",
        "file:move",
        "file:delete",
        "file:metadata"
      ]
    },

    "postgresql": {
      "name": "PostgreSQL MCP Server",
      "description": "PostgreSQL database operations: queries, schema inspection, and managed migrations",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-postgres"],
      "env": {
        "POSTGRES_CONNECTION_STRING": "${POSTGRES_URL:-postgresql://localhost:5432/mydb}"
      },
      "capabilities": [
        "query:read",
        "query:write",
        "schema:inspect",
        "schema:migrate",
        "transaction:managed",
        "explain:plan"
      ]
    },

    "mysql": {
      "name": "MySQL MCP Server",
      "description": "MySQL database operations: queries, schema inspection, and index analysis",
      "command": "npx",
      "args": ["-y", "@benborla29/mcp-server-mysql"],
      "env": {
        "MYSQL_HOST": "${MYSQL_HOST:-localhost}",
        "MYSQL_PORT": "${MYSQL_PORT:-3306}",
        "MYSQL_USER": "${MYSQL_USER}",
        "MYSQL_PASSWORD": "${MYSQL_PASSWORD}",
        "MYSQL_DATABASE": "${MYSQL_DATABASE}"
      },
      "capabilities": [
        "query:read",
        "query:write",
        "schema:inspect",
        "index:analyze"
      ]
    },

    "sqlite": {
      "name": "SQLite MCP Server",
      "description": "Local SQLite database operations for development and lightweight storage",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-sqlite", "${SQLITE_DB_PATH:-./local.db}"],
      "env": {},
      "capabilities": [
        "query:read",
        "query:write",
        "schema:inspect",
        "schema:create",
        "export:csv"
      ]
    },

    "search": {
      "name": "Search MCP Server",
      "description": "Web search and documentation lookup via Brave Search API",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-brave-search"],
      "env": {
        "BRAVE_API_KEY": "${BRAVE_API_KEY}"
      },
      "capabilities": [
        "web:search",
        "news:search",
        "documentation:lookup"
      ]
    },

    "slack": {
      "name": "Slack MCP Server",
      "description": "Slack workspace integration: messaging, channel management, and thread operations",
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-server-slack"],
      "env": {
        "SLACK_BOT_TOKEN": "${SLACK_BOT_TOKEN}",
        "SLACK_APP_TOKEN": "${SLACK_APP_TOKEN}"
      },
      "capabilities": [
        "message:send",
        "message:read",
        "channel:list",
        "channel:history",
        "thread:reply",
        "user:lookup",
        "reaction:add"
      ]
    },

    "jira": {
      "name": "Jira MCP Server",
      "description": "Atlassian Jira integration: issues, sprints, boards, and project management",
      "command": "npx",
      "args": ["-y", "mcp-server-jira"],
      "env": {
        "JIRA_BASE_URL": "${JIRA_BASE_URL}",
        "JIRA_EMAIL": "${JIRA_EMAIL}",
        "JIRA_API_TOKEN": "${JIRA_API_TOKEN}"
      },
      "capabilities": [
        "issue:create",
        "issue:update",
        "issue:transition",
        "issue:search",
        "sprint:manage",
        "board:read",
        "comment:add"
      ]
    },

    "kubernetes": {
      "name": "Kubernetes MCP Server",
      "description": "Kubernetes cluster management: pods, deployments, services, and log retrieval",
      "command": "npx",
      "args": ["-y", "mcp-server-kubernetes"],
      "env": {
        "KUBECONFIG": "${KUBECONFIG:-~/.kube/config}",
        "K8S_CONTEXT": "${K8S_CONTEXT:-}",
        "K8S_NAMESPACE": "${K8S_NAMESPACE:-default}"
      },
      "capabilities": [
        "pod:list",
        "pod:logs",
        "pod:describe",
        "deployment:list",
        "deployment:scale",
        "deployment:rollout",
        "service:list",
        "configmap:read",
        "namespace:list"
      ]
    },

    "terraform": {
      "name": "Terraform MCP Server",
      "description": "Terraform IaC operations: plan, apply, state inspection, and drift detection",
      "command": "npx",
      "args": ["-y", "mcp-server-terraform"],
      "env": {
        "TF_WORKING_DIR": "${TF_WORKING_DIR:-.}",
        "TF_VAR_FILE": "${TF_VAR_FILE:-}"
      },
      "capabilities": [
        "plan:generate",
        "plan:inspect",
        "apply:execute",
        "state:list",
        "state:show",
        "drift:detect",
        "output:read"
      ]
    },

    "datadog": {
      "name": "Datadog MCP Server",
      "description": "Datadog observability: metrics, logs, traces, monitors, and dashboards",
      "command": "npx",
      "args": ["-y", "mcp-server-datadog"],
      "env": {
        "DD_API_KEY": "${DD_API_KEY}",
        "DD_APP_KEY": "${DD_APP_KEY}",
        "DD_SITE": "${DD_SITE:-datadoghq.com}"
      },
      "capabilities": [
        "metrics:query",
        "logs:search",
        "traces:search",
        "monitors:list",
        "monitors:mute",
        "dashboards:list",
        "incidents:list"
      ]
    },

    "newrelic": {
      "name": "New Relic MCP Server",
      "description": "New Relic observability: NRQL queries, alerts, APM data, and entity search",
      "command": "npx",
      "args": ["-y", "mcp-server-newrelic"],
      "env": {
        "NEW_RELIC_API_KEY": "${NEW_RELIC_API_KEY}",
        "NEW_RELIC_ACCOUNT_ID": "${NEW_RELIC_ACCOUNT_ID}"
      },
      "capabilities": [
        "nrql:query",
        "alerts:list",
        "alerts:acknowledge",
        "apm:transactions",
        "entity:search",
        "dashboards:list"
      ]
    }
  },

  "profiles": {
    "development": {
      "_comment": "Minimal set for local development",
      "servers": ["github", "filesystem", "sqlite", "search"]
    },
    "backend": {
      "_comment": "Backend development with database access",
      "servers": ["github", "filesystem", "postgresql", "search", "slack"]
    },
    "devops": {
      "_comment": "Infrastructure and deployment operations",
      "servers": ["github", "kubernetes", "terraform", "datadog", "slack"]
    },
    "full": {
      "_comment": "All servers enabled",
      "servers": [
        "github", "filesystem", "postgresql", "mysql", "sqlite",
        "search", "slack", "jira", "kubernetes", "terraform",
        "datadog", "newrelic"
      ]
    }
  }
}
